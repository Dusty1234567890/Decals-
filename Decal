for count = 1,math.huge do
local decals = game:GetService("Workspace"):GetDescendants()
local decalCount = 0
for _, decal in ipairs(decals) do
    if decal:IsA("Decal") then
        decal.Texture = "http://www.roblox.com/asset/?id=16799121447"
        decalCount = decalCount + 1
    end
end
print("Changed " .. decalCount .. " Decals to my son's picture.")
wait(1)
end
